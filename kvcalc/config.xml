<?xml version='1.0' encoding='utf-8'?>
<widget id="cn.vpool.kvalc" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook type="before_prepare" src="scripts/prebuild.js" />
    <name>KvCalc</name>
    <icon src="src/KvCalc_icon.png" />
    <description>
        A simple maths application
    </description>
    <author email="jialicehong@gmail.com" href="http://cordova.io">
        Jiali
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
